{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["path/to/python/bin"]
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ],
    "outputDirectory": "public",
    "env": {
      "NODE_ENV": "production",
      "DATABASE_URL": "@database-url",
      "SECRET_KEY": "@secret-key"
    },
    "build": {
      "env": {
        "CUSTOM_BUILD_VAR": "value"
      },
      "outputDirectory": "build",
      "public": "public"
    },
    "cleanUrls": true,
    "trailingSlash": false
  }
  